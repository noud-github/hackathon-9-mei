        *                sh "eval `ssh-agent -s` && cat ~/.ssh/id_ed25519|DISPLAY=None SSH_ASKPASS=~/.ssh/tmp ssh-add - && ssh-add -l ; kill -9 \$SSH_AGENT_PID"
        *            }
        *        }
        *    }
        }
		*/
    }
}
