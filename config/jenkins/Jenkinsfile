properties([
  parameters([
    string(name: 'DEPLOY_ENV', defaultValue: 'TESTING', description: 'The target environment', )
   ])
])
node( 'docker-agent' ) {

	docker.withServer( 'tcp://172.17.0.1:2375' ) {
		stage('build') {
			def ubuntu = docker.image( 'yoastseo/docker-php-composer-node' )
			ubuntu.pull()
			ubuntu.inside( '-e SC_ATTR="yoast-seo" -e REPOBASE=testrepo ' ) { 
				sh 'echo "Will deploy to ${DEPLOY_ENV}"'
				sh 'echo "SC_ATTR is set to  ${yoast-seo} " '
				sh '[[ -d "$REPOBASE" ]] && rm -rf "$REPOBASE"'
    			sh 'mkdir -p "$REPOBASE"'
				sh 'cd $REPOBASE && git clone https://github.com/noud-github/wordpress-seo.git'
				sh 'mkdir ~/.ssh'
				sh 'ssh-keyscan -t rsa github.com >> ~/.ssh/known_hosts'
				sh 'pwd'
				sh 'ls -al config/jenkins/'
				catchError {
					sshagent (credentials: ['Jenkins-CI']) {
						sh 'ssh -o StrictHostKeyChecking=no -l pi 10.0.10.10 uname -a'
					}
				}
				sh 'config/jenkins/test.cmd'
			}
		}
	}
}